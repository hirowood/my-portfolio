model Task {
  id               Int       @id @default(autoincrement())
  title            String
  completed        Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  // ★追加：時間管理用
  estimatedMinutes Int?      // 作業目安時間（分）
  startedAt        DateTime? // 作業開始時間
  finishedAt       DateTime? // 作業終了時間
  
  // ★追加：2階層目のタスクを持つためのリレーション
  subTasks         SubTask[] 
}

// ★新規：子タスク（詳細な作業）
model SubTask {
  id               Int       @id @default(autoincrement())
  title            String
  completed        Boolean   @default(false)
  
  // 親タスクとの紐付け
  taskId           Int
  task             Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
}